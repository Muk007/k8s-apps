apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: entity
  namespace: argocd
spec:
  project: sandbox-project
  source:
    repoURL: https://github.com/Muk007/k8s-apps
    targetRevision: HEAD
    path: manifests/apps/entity/overlays/dev
  destination:
    server: https://kubernetes.default.svc
    namespace: entity
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true

---

